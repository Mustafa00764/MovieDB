<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/llBig"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MoviesFragment">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background = "@color/white"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:layout_height="50dp"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start">


                <ImageView
                    android:id="@+id/iv_back"
                    app:tint="@color/black"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_movie_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_Movie_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:text="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/b_style"
            android:layout_height="50dp">


            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play"/>
            <TextView
                android:id="@+id/tv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Смотреть фильм"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:tint="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_bookmark"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="В избранное"
                android:textColor="@color/black"
                android:textSize="10sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Wow movie"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:padding="4.5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_otcenka"
                    android:layout_width="28dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ll_ball"
                    android:gravity="center"
                    android:layout_height="15dp">
                    <TextView
                        android:id="@+id/tv_ball55"
                        android:layout_width="25dp"
                        android:text="8.3"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="13dp"/>


                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_opisanie1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Wow movie"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#D5CECE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvGenreMovie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Лучшие фильмы"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_vse_ludshie_films"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"
                        android:text="Все"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMovieChild"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/tvGenreMovie"
                tools:listitem="@layout/item_movie_mini" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvGenreMovie2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Лучшие фильмы"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_vse_ludshie_films2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginBottom="1dp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"
                        android:text="Все"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMovieChild2"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/tvGenreMovie"
                tools:listitem="@layout/item_acters" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

</ScrollView>
</LinearLayout>